<% provide(:title, "Edit book") %>
<h1>Update Book's Information</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>
 
  
  <%= render 'shared/error_messages', object:  f.object %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :publisher %>
  <%= f.text_field :publisher %>
  <%= f.label :copyright %>
  <%= f.text_field :copyright %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.label :isbn %>
  <%= f.text_field :isbn %>
  <%= f.submit "Update Book", class: "btn btn-primary" %>

<% end %>  
  </div>
</div> 