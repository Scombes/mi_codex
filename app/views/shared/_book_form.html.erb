<%= form_tag ('/add') do  %>
		<h1>Add A Book</h1>
      <%= label_tag 'data', 'Quick Search:' %>
      

      <%= text_field_tag 'info', nil,  placeholder: 'ISBN, Title, Author...' %>
      
     
      <%= submit_tag "Find Book", class: "btn btn-primary" %>
    

<% end %>

<%= form_for(@book) do |f| %>
	<h1> Or enter book info below:</h1>
	
	<%= render 'shared/error_messages', object:  f.object %>

	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :author %>
	<%= f.text_field :author %>
	<%= f.label :publisher %>
	<%= f.text_field :publisher %>
	<%= f.label :copyright %>
	<%= f.text_field :copyright %>
	<%= f.label :genre %>
	<%= f.text_field :genre %>
	<%= f.label :isbn %>
	<%= f.text_field :isbn %>
	<%= f.submit "Shelf Book", class: "btn btn-primary" %>

<% end %>