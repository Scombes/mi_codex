<% if signed_in? %>
  <div class="row">
    <aside class="span3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/book_form' %>
      </section>
    </aside>
    <div class="span9">
      <div class="row">
        <div class="span9">
         
          
          <% if @info != nil %>
            <%= render 'shared/ol_return' %>
          
          <% end %>
        </div>
          <div class="span9">
            <%= render 'shared/feed' %>
          </div>
      </div>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
        <h1>Mi Codex</h1>
        <h2>A book cataloging system</h2>
